<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:minicup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_analyse_constructor"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.austin.view.custom.AnalyseAttributeView
                android:id="@+id/myView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorAccent"
                minicup:attr_one="attr one from xml"
                style="@style/AnalyseAttributeView_FromStyle"
                />

            <HorizontalScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
