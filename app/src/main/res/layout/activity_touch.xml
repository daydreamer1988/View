<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_touch"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.austin.view.subactivity.TouchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MyLayout"
            android:layout_weight="1"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MyLayout2"
            android:layout_weight="1"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MyLayout3"
            android:layout_weight="1"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.austin.view.events.MyLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </com.austin.view.events.MyLayout>

        <com.austin.view.events.MyLayout2
            android:layout_weight="1"

            android:layout_width="100dp"
            android:layout_height="100dp">
        </com.austin.view.events.MyLayout2>

        <com.austin.view.events.MyLayout3
            android:layout_width="100dp"
            android:layout_weight="1"

            android:layout_height="100dp">
        </com.austin.view.events.MyLayout3>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyLayout2"
        />
    <com.austin.view.events.MyLayout
        android:layout_width="200dp"
        android:layout_height="200dp">

        <com.austin.view.events.MyLayout2
            android:layout_width="150dp"
            android:layout_height="150dp">

            <com.austin.view.events.MyLayout3
                android:layout_width="100dp"
                android:layout_height="100dp">

                <com.austin.view.events.MyButtonView
                    android:visibility="gone"
                    android:id="@+id/myButtonView"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <com.austin.view.events.MyTextView
                    android:visibility="gone"
                    android:id="@+id/myTextView"
                    android:background="#ffffff"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <com.austin.view.events.MyView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:id="@id/myView"
                    />
            </com.austin.view.events.MyLayout3>
        </com.austin.view.events.MyLayout2>
    </com.austin.view.events.MyLayout>



</LinearLayout>
